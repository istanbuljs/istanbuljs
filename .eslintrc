{
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "16.8"
        }
    },
    "parserOptions": {
        "ecmaVersion": 7
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "import/namespace": "off"
    },
    "overrides": [
        {
            "files": [
                "packages/istanbul-lib-instrument/{bin,src,test}/**",
                "packages/istanbul-reports/lib/html-spa/rollup.config.js"
            ],
            "parserOptions": {
                "sourceType": "module"
            }
        },
        {
            "files": "packages/istanbul-reports/lib/html/assets/**/*",
            "env": {
                "browser": true
            }
        },
        {
            "files": "packages/istanbul-reports/lib/html-spa/src/**",
            "parser": "babel-eslint",
            "parserOptions": {
                "ecmaVersion": 2019,
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "env": {
                "browser": true
            },
            "rules": {
                "react/prop-types": "off",
                "react/jsx-no-target-blank": "off"
            }
        },
        {
            "files": "!packages/istanbul-reports/lib/html/assets/**",
            "rules": {
                "arrow-body-style": "error",
                "consistent-this": ["error", "block_this_alias"],
                "no-var": "error",
                "object-shorthand": "error",
                "one-var": ["error", "never"],
                "prefer-arrow-callback": "error",
                "prefer-const": "error",
                "prefer-rest-params": "error",
                "prefer-spread": "error",
                "strict": "error"
            }
        }
    ]
}
