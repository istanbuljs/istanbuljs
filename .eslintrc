{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": "packages/istanbul-reports/lib/html/assets/**/*",
      "env": {
        "browser": true
      }
    },
    {
      "files": "!packages/istanbul-reports/lib/html/assets/**",
      "rules": {
        "arrow-body-style": "error",
        "consistent-this": ["error", "block_this_alias"],
        "object-shorthand": "error",
        "one-var": ["error", "never"],
        "prefer-arrow-callback": "error",
        "prefer-const": "error"
      }
    }
  ]
}
